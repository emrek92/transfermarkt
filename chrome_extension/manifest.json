{
    "manifest_version": 3,
    "name": "Transfermarkt Hızlı Arama",
    "version": "1.0",
    "description": "Seçilen metni Transfermarkt'ta arayın ve istatistikleri anında görün.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://transfermarkt-350k.onrender.com/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "styles.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Transfermarkt Ara"
    }
}